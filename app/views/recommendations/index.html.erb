<div>
  <div>
    <h1>
      List of all recommendations
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new recommendation
    </h2>

    <form action="/insert_recommendation" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="playlist_id_box">
          Playlist
        </label>

        <input type="text" id="playlist_id_box" name="query_playlist_id">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="recommendation_type_box">
          Recommendation type
        </label>

        <input type="text" id="recommendation_type_box" name="query_recommendation_type">
      </div>

      <button>
        Create recommendation
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Playlist
        </th>

        <th>
          Description
        </th>

        <th>
          Recommendation type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_recommendations.each do |a_recommendation| %>
      <tr>
        <td>
          <%= a_recommendation.id %>
        </td>

        <td>
          <%= a_recommendation.user_id %>
        </td>

        <td>
          <%= a_recommendation.playlist_id %>
        </td>

        <td>
          <%= a_recommendation.description %>
        </td>

        <td>
          <%= a_recommendation.recommendation_type %>
        </td>

        <td>
          <%= time_ago_in_words(a_recommendation.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_recommendation.updated_at) %> ago
        </td>

        <td>
          <a href="/recommendations/<%= a_recommendation.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<div>
  <div>
    <h1>
      List of all artists
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new artist
    </h2>

    <form action="/insert_artist" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="platform_id_box">
          Platform
        </label>

        <input type="text" id="platform_id_box" name="query_platform_id">
      </div>

      <button>
        Create artist
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Platform
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_artists.each do |an_artist| %>
      <tr>
        <td>
          <%= an_artist.id %>
        </td>

        <td>
          <%= an_artist.name %>
        </td>

        <td>
          <%= an_artist.platform_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_artist.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_artist.updated_at) %> ago
        </td>

        <td>
          <a href="/artists/<%= an_artist.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
